<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.loanmanagement.controller.LoansController" spacing="20" style="-fx-padding: 20;">
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Loans Management" styleClass="header-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ New Loan Application" onAction="#handleNewLoan" styleClass="button-primary"/>
    </HBox>
    <TableView fx:id="loansTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colLoanId" text="Loan ID" prefWidth="100"/>
            <TableColumn fx:id="colCustomer" text="Customer" prefWidth="150"/>
            <TableColumn fx:id="colAmount" text="Amount" prefWidth="100"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            <TableColumn fx:id="colAction" text="Action" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
