    <Label fx:id="statusBadge" text="ACTIVE" styleClass="status-badge, status-active"/>
    
    <!-- APPROVE BUTTON  -->
    <Button fx:id="btnApprove" text="Approve Loan" styleClass="button-primary" onAction="#handleApprove"/>
    
