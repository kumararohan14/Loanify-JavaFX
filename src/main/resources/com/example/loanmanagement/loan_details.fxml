                        <Label fx:id="progressTextLabel" text="11 of 24 EMIs paid" style="-fx-font-weight: bold;"/>
                    </HBox>
                    <VBox spacing="5">
                        <ProgressBar fx:id="emiProgressBar" progress="0.458" maxWidth="Infinity" style="-fx-accent: #1e2a3a; -fx-control-inner-background: #f3f4f6;"/>
                        <HBox>
                            <Label fx:id="progressPercentLabel" text="45.8% Complete" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="remainingEmisLabel" text="13 EMIs remaining" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                        </HBox>
                    </VBox>
                    <Separator/>
                    <HBox spacing="20" alignment="CENTER">
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                            <Label fx:id="paidEmisCountLabel" text="11" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Label text="Paid EMIs" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                        </VBox>
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                            <Label fx:id="monthlyEmiLabel" text="Rs. 23,536" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
                            <Label text="Monthly EMI" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                        </VBox>
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                            <Label fx:id="totalDurationLabel" text="24" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Label text="Months" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Side Stats Content (unchanged) -->
                <VBox spacing="15" minWidth="250">
