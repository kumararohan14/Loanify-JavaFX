                    <VBox styleClass="card" spacing="5">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="âœ”" style="-fx-text-fill: #10b981; -fx-font-size: 18px; -fx-background-color: #d1fae5; -fx-padding: 5; -fx-background-radius: 50; -fx-min-width: 32; -fx-min-height: 32; -fx-alignment: center;"/>
                             <VBox>
                                 <Label text="Amount Paid" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                                 <Label fx:id="totalPaidLabel" text="Rs. 258,896" style="-fx-font-weight: bold;"/>
                             </VBox>
                        </HBox>
                    </VBox>
                    <VBox styleClass="card" spacing="5">
                        <HBox spacing="10" alignment="CENTER_LEFT">
