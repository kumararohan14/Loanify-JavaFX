                             <VBox>
                                 <Label text="Outstanding" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                                 <Label fx:id="totalOutstandingLabel" text="Rs. 306,968" style="-fx-font-weight: bold;"/>
                             </VBox>
                        </HBox>
                    </VBox>
                    <VBox styleClass="card" spacing="5">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                             <Label text="ðŸ“…" style="-fx-text-fill: #3b82f6; -fx-font-size: 18px; -fx-background-color: #dbeafe; -fx-padding: 5; -fx-background-radius: 50; -fx-min-width: 32; -fx-min-height: 32; -fx-alignment: center;"/>
                             <VBox>
                                 <Label text="Next EMI Due" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
                                 <Label fx:id="nextEmiDateLabel" text="Jan 15, 2025" style="-fx-font-weight: bold;"/>
                             </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>

            <!-- EMI Schedule Table -->
            <VBox styleClass="card" spacing="10">
                <Label text="EMI Schedule" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label text="Complete payment schedule for this loan" style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
                <TableView fx:id="scheduleTable" prefHeight="300">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colIndex" text="EMI #" prefWidth="60"/>
                        <TableColumn fx:id="colDate" text="Due Date" prefWidth="120"/>
                        <TableColumn fx:id="colPrincipal" text="Principal" prefWidth="100"/>
                        <TableColumn fx:id="colInterest" text="Interest" prefWidth="100"/>
                        <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </content>
