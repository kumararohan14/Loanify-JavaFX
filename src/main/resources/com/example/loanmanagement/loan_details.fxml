                        <Label fx:id="outstandingLabelHeader" text="Outstanding: Rs. 306,968" style="-fx-text-fill: #ef4444; -fx-font-size: 12px;"/>
                    </VBox>
                </HBox>

                <GridPane hgap="30" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <VBox spacing="2" GridPane.columnIndex="0">
                        <Label text="Customer" style="-fx-text-fill: #6b7280; -fx-font-size: 11px;"/>
